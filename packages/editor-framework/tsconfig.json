{
  "include": ["src/**/*", "types"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
