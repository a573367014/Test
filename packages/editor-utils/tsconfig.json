{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "lib",
    "rootDirs": ["./"],
    "declaration": true,
    "declarationDir": "types",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
}
