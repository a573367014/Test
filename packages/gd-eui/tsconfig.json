{
    "compilerOptions": {
        "declaration": true,
        "target": "ES5",
        "module": "ES2015",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        // "sourceMap": true,
        "baseUrl": ".",
        "noErrorTruncation": true,
        "noEmitOnError": false,
        "types": [
            "webpack-env",
            "jest"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "tslib": [
                "node_modules/tslib/tslib.d.ts"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
    ],
    "exclude": [
        "tests",
        "node_modules",
        "packages/editor-common/",
        "lib",
        "es",
        "dist",
        "cypress",
        "**/*.spec.js",
    ]
}